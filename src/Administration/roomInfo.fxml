<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="633.0" style="-fx-background-color: #FF5733;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Administration.RoomInfo">
    <children>
        <AnchorPane prefHeight="480.0" prefWidth="729.0" style="-fx-background-color: #232c69;">
            <children>
                <TableView fx:id="roomInfo" layoutX="128.0" prefHeight="480.0" prefWidth="601.0">
                    <columns>
                        <TableColumn fx:id="colroomNumber" prefWidth="96.0" text="Room Number" />
                        <TableColumn fx:id="colavailability" prefWidth="75.0" text="Availability" />
                        <TableColumn fx:id="colcleanStatus" prefWidth="101.0" text="Clean Status" />
                        <TableColumn fx:id="colprice" prefWidth="75.0" text="Price" />
                        <TableColumn fx:id="colbedType" prefWidth="88.0" text="Bed Type" />
                    </columns>
                </TableView>
                <Button fx:id="loadData" layoutX="15.0" layoutY="206.0" mnemonicParsing="false" onAction="#funcLoadData" text="Load Data">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="back" layoutX="30.0" layoutY="240.0" mnemonicParsing="false" onAction="#funcBack" text="Back">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
